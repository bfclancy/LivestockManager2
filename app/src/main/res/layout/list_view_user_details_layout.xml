<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_view_user_details">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayFirstName"
        android:text="Name Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplaySurname"
        android:text="Surname Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayAddress"
        android:text="Address Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayHerdNumber"
        android:text="Herd Number Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayUserName"
        android:text="User Name Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayPAC"
        android:text="PAC Here"
        android:gravity="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplayPassword"
        android:text="Password Here"
        android:gravity="center"/>
</LinearLayout>