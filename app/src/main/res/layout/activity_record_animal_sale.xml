<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="1"
        style="@style/AppTheme">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.asus.livestockmanager.RecordAnimalSale"
            android:id="@+id/RecordAnimalSale">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/textSearchHeader"
                android:id="@+id/textView5"
                android:typeface="serif"
                android:textColor="#ddf9ff" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:id="@+id/spinner"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sale Price"
                android:id="@+id/textViewSaleAmount"
                android:layout_below="@+id/spinner"
                android:typeface="serif"
                android:textColor="#FFDDF9FF" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_margin="5dp"
                android:layout_height="50dp"
                android:id="@+id/editTextSaleAmount"
                android:inputType="numberDecimal"
                android:layout_below="@+id/textViewSaleAmount"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextshape"
                android:typeface="serif"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Record Sale"
                android:id="@+id/buttonRecordSale"
                android:layout_below="@+id/editTextSaleAmount"
                android:background="@drawable/buttonshape"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Cancel"
                android:id="@+id/buttonCancelSale"
                android:layout_below="@+id/buttonRecordSale"
                android:background="@drawable/buttonshape"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>