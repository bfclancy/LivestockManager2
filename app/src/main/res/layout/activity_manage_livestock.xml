<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    style="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:columnCount="2"
        android:rowCount="4"
        android:useDefaultMargins="false"
        android:clickable="false">


        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/add"
            android:text="Add New Animal"
            android:id="@+id/buttonAddNewAnimal"
            android:background="@drawable/buttonshape"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:typeface="serif" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/search"
            android:background="@drawable/buttonshape"
            android:text="Search For Animal"
            android:id="@+id/buttonSearchForAnimal"
            android:typeface="serif"
            android:layout_alignTop="@+id/buttonViewAnimals"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="Record Sale"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/dollars"
            android:id="@+id/buttonRecordAnimalSale"
            android:typeface="serif"
            android:layout_alignParentStart="false"
            android:layout_alignTop="@+id/buttonRecordAnimalBirth" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/birth"
            android:text="Record Birth"
            android:id="@+id/buttonRecordAnimalBirth"
            android:typeface="serif"
            android:layout_below="@+id/buttonRecordAnimalDeath"
            android:layout_alignStart="@+id/buttonRecordAnimalDeath" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/death"
            android:text="Record Death"
            android:id="@+id/buttonRecordAnimalDeath"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp" />


        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/view"
            android:text="View Animals"
            android:id="@+id/buttonViewAnimals"
            android:typeface="serif"
            android:layout_below="@+id/buttonRecordAnimalSale"
            android:layout_alignStart="@+id/buttonRecordAnimalBirth"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:text="Record Purchase"
            android:drawableTop="@drawable/purchase"
            android:id="@+id/buttonRecordAnimalPurchase"
            android:layout_below="@+id/buttonSearchForAnimal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/pregnancy"
            android:text="Record Pregnancy"
            android:id="@+id/buttonRecordPregnancy"
            android:typeface="serif"
            android:layout_below="@+id/buttonViewAnimals"
            android:layout_alignStart="@+id/buttonRecordAnimalBirth"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
</LinearLayout>