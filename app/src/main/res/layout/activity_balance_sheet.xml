<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView02"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:weightSum="1"
        style="@style/AppTheme">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.example.asus.livestockmanager.BalanceSheetActivity"
            android:id="@+id/BalanceSheetActivity">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Balance Sheet"
                android:id="@+id/textViewBalanceSheetHeader"
                android:typeface="serif"
                android:textColor="#ddf9ff" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total Income For Year"
                android:id="@+id/textViewIncomeTotal"
                android:layout_below="@+id/textViewBalanceSheetHeader"
                android:typeface="serif"
                android:textColor="#FFDDF9FF" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_margin="5dp"
                android:height="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextIncomeTotal"
                android:layout_below="@+id/textViewIncomeTotal"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextshape"
                android:typeface="serif"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total Expenditure For Year"
                android:id="@+id/textViewExpenditureTotal"
                android:layout_below="@+id/editTextIncomeTotal"
                android:typeface="serif"
                android:textColor="#FFDDF9FF" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:height="40dp"
                android:id="@+id/editTextExpenditureTotal"
                android:layout_below="@+id/textViewExpenditureTotal"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextshape"
                android:typeface="serif"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Balance for the Year"
                android:id="@+id/textViewBalance"
                android:layout_below="@+id/editTextExpenditureTotal"
                android:typeface="serif"
                android:textColor="#FFDDF9FF" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:height="40dp"
                android:id="@+id/editTextBalance"
                android:layout_below="@+id/textViewBalance"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextshape"
                android:typeface="serif"/>



        </RelativeLayout>
    </LinearLayout>
</ScrollView>