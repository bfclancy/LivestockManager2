<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    style="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:columnCount="2"
        android:rowCount="4"
        android:useDefaultMargins="false"
        android:clickable="false">

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/pricetag"
            android:text="Beef Prices"
            android:id="@+id/buttonBeefPrices"
            android:background="@drawable/buttonshape"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/dollars"
            android:background="@drawable/buttonshape"
            android:text="Cost Per Head"
            android:id="@+id/buttonCostPerHead"
            android:typeface="serif"
            android:layout_below="@+id/buttonBeefPrices"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="Profit Per Head"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/profit"
            android:id="@+id/buttonProfitPerHead"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/buttonTestTrends"
            android:layout_alignEnd="@+id/buttonUserReports" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="User Reports"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/graphs"
            android:id="@+id/buttonUserReports"
            android:layout_marginLeft="10dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/trends"
            android:text="Test Trends"
            android:id="@+id/buttonTestTrends"
            android:typeface="serif"
            android:layout_below="@id/buttonCostPerHead"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</LinearLayout>