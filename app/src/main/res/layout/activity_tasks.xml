<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/darker_gray"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    style="@style/AppTheme">




    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:columnCount="2"
        android:rowCount="4"
        android:useDefaultMargins="false"
        android:clickable="false">



        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/newappointment"
            android:text="New Appointment"
            android:id="@+id/buttonNewVetAppointment"
            android:background="@drawable/buttonshape"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:typeface="serif" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:drawableTop="@drawable/schedule"
            android:background="@drawable/buttonshape"
            android:text="View Upcoming Appointments"
            android:id="@+id/buttonViewVetVisits"
            android:typeface="serif"
            android:layout_alignTop="@+id/buttonRemedies"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="@string/buttonRemedies"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/medicine"
            android:id="@+id/buttonRemedies"
            android:typeface="serif"
            android:layout_below="@+id/buttonTestResults"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="@string/buttonTestResults"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/testresults"
            android:id="@+id/buttonTestResults"
            android:layout_marginLeft="10dp"
            android:typeface="serif"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:text="Find a Vet"
            android:background="@drawable/buttonshape"
            android:drawableTop="@drawable/map"
            android:id="@+id/buttonFindAVet"
            android:typeface="serif"
            android:layout_below="@+id/buttonRemedies"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</LinearLayout>